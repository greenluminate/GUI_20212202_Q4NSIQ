<Window x:Class="FriendshipExploder.MenuWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FriendshipExploder"
        mc:Ignorable="d"
        Title="MenuWindows" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Start" Grid.Row="0" Content="Start!" Margin="200,30" Padding="10" Click="Start_Click" />
        <Button x:Name="Exit" Grid.Row="1" Content="Exit!" Margin="200,30" Padding="10" />

    </Grid>
</Window>
