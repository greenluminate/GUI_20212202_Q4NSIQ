<Window x:Class="FriendshipExploder.Menu.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FriendshipExploder.Menu"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        x:Name="menu"
        Loaded="menu_Loaded"
        KeyDown="menu_KeyDown"
        Title="MainMenu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" x:Name="firstColumn">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Row="1" x:Name="newGame" Content="New game" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                       FontSize="20" FontWeight="Bold" Margin="20,20,20,20" Click="NewGame" Foreground="White" Background="DimGray">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Grid.Row="2" x:Name="exitGame" Content="Exit" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                       FontSize="20" FontWeight="Bold" Margin="20,20,20,20" Click="Exit" Foreground="White" Background="DimGray">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
        <Grid Grid.Column="1" x:Name="secondColumn">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" x:Name="player0" BorderBrush="LightGray" BorderThickness="2" Margin="10,10,10,10">
                <DockPanel>
                    <Label Content="Player 1" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <Label x:Name="player0KeyBinding" HorizontalAlignment="Right" Content="[Disabled]" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="24" FontWeight="Bold" Foreground="White"/>
                </DockPanel>
            </Border>
            <Border Grid.Row="2" x:Name="player1" BorderBrush="LightGray" BorderThickness="2" Margin="10,10,10,10">
                <DockPanel>
                    <Label Content="Player 2" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <Label x:Name="player1KeyBinding" HorizontalAlignment="Right" Content="[Disabled]" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="24" FontWeight="Bold" Foreground="White"/>
                </DockPanel>
            </Border>
            <Border Grid.Row="3" x:Name="player2" BorderBrush="LightGray" BorderThickness="2" Margin="10,10,10,10">
                <DockPanel>
                    <Label Content="Player 3" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <Label x:Name="player2KeyBinding" HorizontalAlignment="Right" Content="[Disabled]" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="24" FontWeight="Bold" Foreground="White"/>
                </DockPanel>
            </Border>
            
        </Grid>
        <Grid Grid.Column="2" x:Name="thirdColumn">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <ListBox x:Name="playgrounds" Grid.Row="1" Background="Transparent" HorizontalContentAlignment="Stretch">
            </ListBox>
        </Grid>
    </Grid>
</Window>
